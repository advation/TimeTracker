<script>

    $(document).ready(function() {
        $('.keyButton').click(function() {
            $value = $(this).text();
            $("#pin").val($("#pin").val()+$value);
        });

        $('.clearKeyPad').click(function() {
            $("#pin").val('');
            $("#errorMessage").foundation('reveal','close');
            return false;
        });

        $(document).keyup(function(x) {
            if(x.which != 13)
            {
                $("#pin").focus();
                switch(x.keyCode) {
                    case 48:
                        $("#pin").val($("#pin").val()+'0');
                        $("#pin").blur();
                        break;
                    case 49:
                        $("#pin").val($("#pin").val()+'1');
                        $("#pin").blur();
                        break;
                    case 50:
                        $("#pin").val($("#pin").val()+'2');
                        $("#pin").blur();
                        break;
                    case 51:
                        $("#pin").val($("#pin").val()+'3');
                        $("#pin").blur();
                        break;
                    case 52:
                        $("#pin").val($("#pin").val()+'4');
                        $("#pin").blur();
                        break;
                    case 53:
                        $("#pin").val($("#pin").val()+'5');
                        $("#pin").blur();
                        break;
                    case 54:
                        $("#pin").val($("#pin").val()+'6');
                        $("#pin").blur();
                        break;
                    case 55:
                        $("#pin").val($("#pin").val()+'7');
                        $("#pin").blur();
                        break;
                    case 56:
                        $("#pin").val($("#pin").val()+'8');
                        $("#pin").blur();
                        break;
                    case 57:
                        $("#pin").val($("#pin").val()+'9');
                        $("#pin").blur();
                        break;
                }
            }

            $count = $("#pin").val().length;

            if($count == 4)
            {
                document.getElementById("auth_form").submit();
            }
        });



    });

</script>